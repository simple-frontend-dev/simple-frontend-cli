{
  "name": "simplefrontend",
  "description": "Source code for the Simple Frontend CLI",
  "author": "simple-frontend-dev",
  "keywords": [
    "frontend",
    "cli",
    "Simple Frontend"
  ],
  "homepage": "https://simplefrontend.dev/",
  "repository": {
    "type": "git",
    "url": "https://github.com/simple-frontend-dev/simple-frontend-cli"
  },
  "bugs": {
    "url": "https://github.com/simple-frontend-dev/simple-frontend-cli/issues"
  },
  "license": "MIT",
  "version": "0.6.1",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "dist/cli.js",
  "bin": "./dist/cli.js",
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "dev": "pnpm run build:dev && node dist/cli.js",
    "build:dev": "rm -rf dist && tsc --noCheck",
    "build": "rm -rf dist && tsc",
    "test": "vitest run",
    "check:exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
    "release": "pnpm build && pnpm check:exports && pnpm exec changeset publish"
  },
  "packageManager": "pnpm@10.5.2",
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.4",
    "@changesets/cli": "^2.28.1",
    "@eslint/js": "^9.21.0",
    "@tsconfig/node-lts": "^22.0.1",
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "^22.13.9",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "globals": "^16.0.0",
    "lefthook": "^1.11.3",
    "memfs": "4.17.0",
    "prettier": "3.5.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0",
    "vitest": "^3.0.8"
  },
  "dependencies": {
    "@clack/prompts": "^0.10.0",
    "commander": "^13.1.0",
    "open": "10.1.0",
    "package-manager-detector": "^0.2.11",
    "picocolors": "1.1.1",
    "yaml": "^2.7.0"
  }
}
